<table class="table table-striped">
    <thead>
    <tr>
        <th>Jméno</th>
        <th>Místnost</th>
        <th>Telefon</th>
        <th>Pozice</th>
        <th>Akce</th>
    </tr>
    </thead>

    <tbody>
    {{# employees }}
        <tr>
            <td><a href="/people/clovek.php?employee_id={{ e_id }}">{{ name }} {{surname}}</a></td>
            <td>{{ room_name }}</td>
            <td>{{ phone }}</td>
            <td>{{ job}}</td>
            <td>
                <form method="post" action="/people/update.php">
                    <input type="hidden" name="employee_id" value="{{e_id}}" />
                    <input type="submit" value="Update" class="btn btn-info"/>
                </form>
                <form method="post" action="/people/delete.php" onsubmit="return confirm('Opravdu chcete smazat tohoto zaměstnance?\n Akce je nevratná!')">
                    <input type="hidden" name="employee_id" value="{{e_id}}" />
                    <input type="submit" value="Delete" class="btn btn-danger"/>
                </form>
            </td>
        </tr>
    {{/ employees }}
    </tbody>
</table>
